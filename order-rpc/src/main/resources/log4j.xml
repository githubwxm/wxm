<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss:sss z}:[%p]  %t %5p %c{2}: %m%n" />
		</layout>
	</appender>
	<appender name="file-log" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="../logs/order-rpc.log"/>
		<param name="append" value="true"/>
		<param name="encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss:sss z}:[%p]  %t %5p %c{2}: %m%n"/>
		</layout>
	</appender>
	<appender name="logstash" class="org.apache.log4j.net.SocketAppender">
		<param name="remoteHost" value="${logstash.host}" />
		<param name="port" value="${logstash.port}" />
		<param name="Threshold" value="DEBUG" />
		<param name="ReconnectionDelay" value="1000" />
		<param name="LocationInfo" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yy-MM-dd HH:mm:ss:sss z}:[%p] %t %c{2}: %m%n"/>
		</layout>
	</appender>

	<!-- 3rdparty Loggers -->
	<logger name="JobPullMachine" additivity="false">
		<level value="INFO" />
	</logger>
	<logger name="HeartBeatMonitor" additivity="false">
		<level value="INFO" />
	</logger>
	<logger name="com.github.ltsopensource.core.monitor.MStatReportWorker" additivity="false">
		<level value="INFO" />
	</logger>
	<logger name="org.apache.zookeeper" additivity="false">
		<level value="INFO" />
	</logger>
	<logger name="org.apache.http.impl.nio.conn.PoolingNHttpClientConnectionManager" additivity="false">
		<level value="INFO" />
	</logger>
	<logger name="com.alibaba.dubbo">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework">
		<level value="WARN" />
	</logger>

	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="logstash" />
		<appender-ref ref="file-log" />
	</root>
</log4j:configuration>