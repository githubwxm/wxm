    <insert id="create" parameterType="com.all580.ep.api.entity.CoreEpChannel">
       insert into t_core_ep_channel(supplier_core_ep_id ,seller_core_ep_id,rate)
       values(#{supplier_core_ep_id} ,#{seller_core_ep_id},#{rate});
    </insert>

    <update id="update">
        update t_core_ep_channel set rate=#{rate} where `id`=#{id};
    </update>
    <delete id="cancel">
          delete from t_core_ep_channel where `id`=#{id};
    </delete>

    <select id="select" resultType="com.all580.ep.api.entity.EpChannelRep">
        select * from (
        select id,
        (select `name` from t_ep where id=supplier_core_ep_id  ) as supplier_name ,
        (select link_phone from t_ep where id=supplier_core_ep_id) as supplier_phone ,
        (select `name` from t_ep where id =seller_core_ep_id)   as seller_name ,
        (select link_phone from t_ep where id =seller_core_ep_id)   as seller_phone ,
        truncate(rate/100,2) as rate from t_core_ep_channel ) f
        where 1=1
        <if test="supplier_name != null">
            and f.`supplier_name` like '%${supplier_name}%'
        </if>
    </select>
</mapper>